<% include parciales/header %>

<div class="container">

	<div class="row text-center">
		<h1>Agregar nuevo comentario a <%= club.nombre %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form method="post" action="/clubs/<%= club._id %>/comments">
				<div class="form-group">
					<input class="form-control" type="text" name="comentario[texto]" placeholder="Comment here">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block" type="submit">Publicar</button>
				</div>
			</form>
			<!-- <p><a href="/clubs">Go back</a></p> -->
		</div>
	</div>
</div>


