<% include parciales/header %>

<div class="container">

	<div class="row text-center">
		<h1>Agregar nuevo club</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form method="post" action="/clubs">
				<div class="form-group">
					<input class="form-control" type="text" name="club[nombre]" placeholder="Nombre del club">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="club[imagen]" placeholder="Inserta la url de la imagen">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="club[desc]" placeholder="Descripcion del club">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block" type="submit">Publicar</button>
				</div>
				
			</form>
			<p><a href="/clubs">Atras</a></p>
		</div>
	</div>
</div>
<% include parciales/footer %>