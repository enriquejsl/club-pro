<% include parciales/header %>

<div class="container">

	<div class="row text-center">
		<h1>Modificar comentario a <%= club.nombre %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form method="post" action="/clubs/<%= club._id %>/comments/<%= comentario._id%>">
				<div class="form-group">
					<input class="form-control" type="text" name="comentario[text]" value="<%= comentario.texto %>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block" type="submit">Publicar</button>
				</div>
			</form>
			<form action="/clubs/<%= club._id %>/comments/<%= comentario._id%>?_method=DELETE" method="post">
				<button class="btn btn-danger">Borrar comentario</button>
			</form>
			<!-- <p><a href="/clubs">Go back</a></p> -->
		</div>
	</div>
</div>


<% include parciales/footer %>