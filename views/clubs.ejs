<% include parciales/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Clubs list</h1>
			<p><a class="btn btn-primary btn-large" href="/clubs/new">Agregar nuevo club</a></p>
		</div>
		
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% clubs.forEach(function(club){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= club.imagen %>">
				<div class="caption">
					<h3><%= club.nombre %></h3>
				</div>
				<p><a href="clubs/<%=club._id%>" class="btn btn-primary">Mostrar info</a></p>
			</div>
		</div>
		<% }); %>
	</div>
	
</div>

<% include parciales/footer %>